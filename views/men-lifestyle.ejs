<%- include('partials/header') %>
<link rel="stylesheet" href="/css/fancy-card.css">
<link rel="stylesheet" href="/css/sections.css">
<link rel="stylesheet" href="/css/brand-story.css">

<!-- Hero Section -->
<section class="relative h-[70vh] overflow-hidden">
    <div class="absolute inset-0">
        <img src="/images/men/lifestyle-hero.jpg" alt="Men's Lifestyle" class="w-full h-full object-cover">
        <div class="absolute inset-0 hero-gradient"></div>
    </div>
    <div class="relative flex items-center justify-center h-full text-white text-center">
        <div class="max-w-3xl px-4">
            <h1 class="text-5xl font-bold mb-4">Men's Performance Collection</h1>
            <p class="text-xl mb-8">Engineered for excellence. Designed for performance.</p>
            <a href="#products" class="bg-white text-black px-8 py-3 rounded-full font-semibold hover:bg-gray-100 transition">Shop Collection</a>
        </div>
    </div>
</section>

<!-- Brand Story -->
<%- include('partials/brand-story') %>

<!-- Products Section -->
<section id="products" class="nobull-section nobull-bg-white nobull-fade-in py-16 px-4">
    <div class="max-w-7xl mx-auto nobull-content">
        <h2 class="nobull-heading uppercase mb-4">Men's Collection</h2>
        <p class="nobull-subheading text-gray-700 mb-10">Premium gear for the modern athlete.</p>
        <% if (products && products.length > 0) { %>
        <div class="fancy-card-grid">
            <% products.forEach(product => { %>
            <div class="fancy-card group">
                <img src="<%= product.image || product.img %>" alt="<%= product.name %>" class="fancy-card-img" loading="lazy" />
                <div class="fancy-card-body">
                    <h2 class="fancy-card-title"><%= product.name %></h2>
                    <p class="fancy-card-desc"><%= product.desc || product.description %></p>
                    <span class="fancy-card-price"><%= product.price %></span>
                    <a href="#" class="fancy-card-btn">Shop</a>
                </div>
            </div>
            <% }); %>
        </div>
        <% } else { %>
        <div class="text-center text-gray-500 py-20 text-lg">No lifestyle products found for men.</div>
        <% } %>
    </div>
</section>

<!-- Performance Stats -->
<%- include('partials/performance-stats') %>

<!-- Technology Section -->
<%- include('partials/technology') %>

<!-- Featured Athletes -->
<%- include('partials/featured-athletes') %>

<!-- Training Tips -->
<%- include('partials/training-tips') %>

<%- include('partials/footer') %>
