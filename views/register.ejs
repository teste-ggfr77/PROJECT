<%- include('partials/header') %>

<div class="login-container">
    <h1>Create account</h1>
    
    <% if (messages && messages.error) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= messages.error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>

    <form method="POST" action="/auth/register">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <input type="text" class="text-input" name="name" placeholder="Full Name" required>
        <input type="email" class="text-input" name="email" placeholder="Email" required>
        <input type="password" class="text-input" name="password" placeholder="Password" required>
        <button type="submit" class="signin-btn">Create account</button>
    </form>
    <a href="/auth/login" class="create-link">Already have an account? Sign in</a>
</div>

<style>
.login-container {
    max-width: 400px;
    margin: 48px auto;
    padding: 0 20px;
    text-align: center;
}

.login-container h1 {
    font-size: 30px;
    margin-bottom: 32px;
    font-weight: normal;
}

.text-input {
    width: 100%;
    padding: 12px;
    margin-bottom: 16px;
    border: 1px solid #E5E7EB;
    border-radius: 5px;
    font-size: 14px;
}

.text-input:focus {
    outline: none;
    border-color: #5850EC;
}

.signin-btn {
    width: 100%;
    background-color: black;
    color: white;
    border: none;
    border-radius: 25px;
    padding: 12px;
    font-size: 14px;
    cursor: pointer;
    margin-bottom: 24px;
}

.create-link {
    color: #374151;
    text-decoration: none;
    font-size: 14px;
}

.create-link:hover {
    text-decoration: underline;
}
</style>

<%- include('partials/footer') %>