<%- include('partials/header') %>

<div class="login-container">
    <h1>Login</h1>
    
    <% if (messages && messages.error) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <%= messages.error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>

    <form action="/auth/login" method="POST">
        <button type="submit" class="shop-signin-btn" name="shopSignIn" value="true">Sign in with shop</button>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    </form>
    
    <div class="divider">
        <span>or</span>
    </div>

    <form method="POST" action="/auth/login">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <input type="email" class="text-input" id="email" name="email" placeholder="Email" required>
        <input type="password" class="text-input" id="password" name="password" placeholder="Password" required>
        <a href="/auth/forgot-password" class="forgot-link">Forgot your password?</a>
        <button type="submit" class="signin-btn">Sign in</button>
    </form>
    <a href="/auth/register" class="create-link">Create account</a>
</div>

<style>
.login-container {
    max-width: 400px;
    margin: 48px auto;
    padding: 0 20px;
    text-align: center;
}

.login-container h1 {
    font-size: 30px;
    margin-bottom: 32px;
    font-weight: normal;
}

.shop-signin-btn {
    width: 100%;
    background-color: #5850EC;
    color: white;
    border: none;
    border-radius: 25px;
    padding: 12px;
    font-size: 14px;
    cursor: pointer;
    margin-bottom: 32px;
}

.divider {
    position: relative;
    text-align: center;
    margin: 24px 0;
}

.divider span {
    background-color: white;
    color: #6B7280;
    padding: 0 10px;
    font-size: 14px;
}

.divider::before {
    content: "";
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    height: 1px;
    background: #E5E7EB;
    z-index: -1;
}

.text-input {
    width: 100%;
    padding: 12px;
    margin-bottom: 16px;
    border: 1px solid #E5E7EB;
    border-radius: 5px;
    font-size: 14px;
}

.text-input:focus {
    outline: none;
    border-color: #5850EC;
}

.forgot-link {
    display: block;
    text-align: left;
    color: #374151;
    text-decoration: none;
    font-size: 14px;
    margin-bottom: 24px;
}

.signin-btn {
    width: 100%;
    background-color: black;
    color: white;
    border: none;
    border-radius: 25px;
    padding: 12px;
    font-size: 14px;
    cursor: pointer;
    margin-bottom: 24px;
}

.create-link {
    color: #374151;
    text-decoration: none;
    font-size: 14px;
}

.forgot-link:hover,
.create-link:hover {
    text-decoration: underline;
}
</style>

<%- include('partials/footer') %>