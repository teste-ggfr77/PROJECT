        setTimeout(() => {
            productCard.style.animation = '';
        }, 500);
    })
    .finally(() => {
        // Reset button with delay for better UX
        setTimeout(() => {
            button.classList.remove('loading');
            button.disabled = false;
        }, 800);
    });
}

