}

.image-reflection {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 30%;
    background: linear-gradient(to top, rgba(255,255,255,0.1), transparent);
    pointer-events: none;
}

.image-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
