    color: #ddd;
    font-size: 16px;
    transition: all 0.2s ease;
    animation: starFadeIn 0.5s ease-out;
}

@keyframes starFadeIn {
    from { opacity: 0; transform: scale(0.5); }
    to { opacity: 1; transform: scale(1); }
}

.star.filled {
    color: #000;
    text-shadow: 0 0 4px rgba(0,0,0,0.3);
