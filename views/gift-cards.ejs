<%- include('partials/header') %>

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: 'Helvetica Neue', Arial, sans-serif;
        background-color: #ffffff;
        padding-top: 80px;
    }

    .gift-hero {
        position: relative;
        height: 60vh;
        background: linear-gradient(135deg, #7c3aed 0%, #5b21b6 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

    .gift-hero::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-image: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><defs><pattern id="gift-pattern" width="20" height="20" patternUnits="userSpaceOnUse"><circle cx="10" cy="10" r="2" fill="rgba(255,255,255,0.1)"/></pattern></defs><rect width="100" height="100" fill="url(%23gift-pattern)"/></svg>');
        opacity: 0.3;
    }

    .gift-hero-content {
        position: relative;
        z-index: 2;
        text-align: center;
        color: white;
        max-width: 800px;
        padding: 0 2rem;
    }

    .gift-hero-title {
        font-size: clamp(3rem, 8vw, 6rem);
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        margin-bottom: 1rem;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    }

    .gift-hero-subtitle {
        font-size: clamp(1.25rem, 3vw, 1.5rem);
        font-weight: 400;
        letter-spacing: 0.05em;
        margin-bottom: 2rem;
        opacity: 0.9;
    }

    .gift-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 5rem 2rem;
    }

    .gift-cards-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 3rem;
        margin-top: 3rem;
    }

    .gift-card-option {
        background: #ffffff;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        border: 3px solid transparent;
    }

    .gift-card-option:hover {
        transform: translateY(-10px);
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
        border-color: #7c3aed;
    }

    .gift-card-visual {
        height: 200px;
        background: linear-gradient(135deg, #7c3aed 0%, #5b21b6 100%);
        position: relative;
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
    }

    .gift-card-visual::before {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: repeating-linear-gradient(
            45deg,
            transparent,
            transparent 15px,
            rgba(255, 255, 255, 0.1) 15px,
            rgba(255, 255, 255, 0.1) 30px
        );
        animation: shimmer 3s linear infinite;
    }

    @keyframes shimmer {
        0% { transform: translateX(-50%) translateY(-50%) rotate(0deg); }
        100% { transform: translateX(-50%) translateY(-50%) rotate(360deg); }
    }

    .gift-card-icon {
        width: 5rem;
        height: 5rem;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        z-index: 2;
    }

    .gift-card-icon i {
        font-size: 2rem;
        color: white;
    }

    .gift-card-content {
        padding: 2.5rem;
    }

    .gift-card-title {
        font-size: 1.75rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        margin-bottom: 1rem;
        color: #000000;
    }

    .gift-card-description {
        color: #666666;
        line-height: 1.6;
        margin-bottom: 2rem;
        font-size: 1rem;
    }

    .gift-card-features {
        list-style: none;
        padding: 0;
        margin: 0 0 2.5rem 0;
    }

    .gift-card-features li {
        display: flex;
        align-items: center;
        margin-bottom: 1rem;
        color: #333333;
        font-weight: 500;
    }

    .gift-card-features li::before {
        content: 'âœ“';
        background: #7c3aed;
        color: white;
        width: 1.5rem;
        height: 1.5rem;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 1rem;
        font-size: 0.8rem;
        font-weight: 700;
    }

    .gift-card-cta {
        display: inline-block;
        background: #7c3aed;
        color: white;
        padding: 1.25rem 2.5rem;
        text-decoration: none;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        border-radius: 8px;
        transition: all 0.3s ease;
        border: 2px solid #7c3aed;
        text-align: center;
        width: 100%;
        box-sizing: border-box;
    }

    .gift-card-cta:hover {
        background: white;
        color: #7c3aed;
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(124, 58, 237, 0.3);
    }

    .section-intro {
        text-align: center;
        margin-bottom: 3rem;
    }

    .section-title {
        font-size: clamp(2.5rem, 5vw, 3.5rem);
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        margin-bottom: 1rem;
        color: #000000;
    }

    .section-description {
        font-size: 1.25rem;
        color: #666666;
        max-width: 600px;
        margin: 0 auto;
        line-height: 1.6;
    }

    .brand-highlight {
        color: #7c3aed;
        font-weight: 700;
    }

    .gift-amounts {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
        gap: 1rem;
        margin: 2rem 0;
    }

    .amount-option {
        background: #f8f9fa;
        border: 2px solid #e9ecef;
        border-radius: 8px;
        padding: 1rem;
        text-align: center;
        font-weight: 700;
        font-size: 1.25rem;
        color: #333;
        transition: all 0.3s ease;
        cursor: pointer;
    }

    .amount-option:hover,
    .amount-option.selected {
        background: #7c3aed;
        color: white;
        border-color: #7c3aed;
        transform: translateY(-2px);
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .gift-container {
            padding: 3rem 1rem;
        }

        .gift-cards-grid {
            grid-template-columns: 1fr;
            gap: 2rem;
        }

        .gift-card-content {
            padding: 2rem;
        }

        .gift-hero-content {
            padding: 0 1rem;
        }
    }

    @media (max-width: 480px) {
        .gift-cards-grid {
            gap: 1.5rem;
        }

        .gift-card-content {
            padding: 1.5rem;
        }
    }

    /* Accessibility */
    @media (prefers-reduced-motion: reduce) {
        .gift-card-option,
        .gift-card-cta,
        .gift-card-visual::before {
            animation: none;
            transition: none;
        }

        .gift-card-option:hover {
            transform: none;
        }

        .gift-card-cta:hover {
            transform: none;
        }
    }

    .gift-card-option:focus-within {
        outline: 3px solid #7c3aed;
        outline-offset: 2px;
    }
</style>

<main>
