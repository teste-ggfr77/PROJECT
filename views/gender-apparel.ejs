          {img: 'https://images.unsplash.com/photo-1594633312681-425c7b97ccd1?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=80', name: 'TRAINING SHORTS', price: '48', category: 'Women\'s Shorts'},
          {img: 'https://images.unsplash.com/photo-1571019613454-1cb2f99b2d8b?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=80', name: 'SPORTS BRA', price: '38', category: 'Women\'s Sports Bras'},
          {img: 'https://images.unsplash.com/photo-1578662996442-48f60103fc96?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=80', name: 'PERFORMANCE HOODIE', price: '75', category: 'Women\'s Hoodies'},
