<%- include('partials/header') %>

<!-- Hero Section -->
<section class="relative w-full h-96 overflow-hidden">
  <!-- Background Image -->
  <img src="<%= gender === 'women' ? 'https://images.unsplash.com/photo-1506629905607-d9b0b1a9e1e1?ixlib=rb-4.0.3&auto=format&fit=crop&w=1920&q=80' : 'https://images.unsplash.com/photo-1521572163474-6864f9cf17ab?ixlib=rb-4.0.3&auto=format&fit=crop&w=1920&q=80' %>" alt="<%= title %>" class="absolute w-full h-full object-cover z-0" />
  
  <!-- Dark Overlay -->
  <div class="absolute inset-0 bg-black bg-opacity-60 z-10"></div>

  <!-- Content -->
  <div class="relative z-20 flex flex-col items-center justify-center text-center h-full px-4">
    <h1 class="text-white text-4xl md:text-6xl font-bold uppercase drop-shadow-lg tracking-wider mb-4"><%= title %></h1>
    <p class="text-white/80 tracking-wide text-base md:text-lg drop-shadow-sm mb-8"><%= subtitle %></p>
  </div>
</section>

<!-- Products Grid -->
<section class="w-full bg-white py-20 px-4">
  <div class="max-w-7xl mx-auto">
    <% if (products && products.length > 0) { %>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
        <% products.forEach(product => { %>
        <div class="group cursor-pointer">
          <div class="relative overflow-hidden mb-4">
            <img src="<%= product.image || 'https://images.unsplash.com/photo-1521572163474-6864f9cf17ab?ixlib=rb-4.0.3&auto=format&fit=crop&w=400&q=80' %>" alt="<%= product.name %>" class="w-full h-80 object-cover group-hover:scale-105 transition duration-500" />
          </div>
          <div class="text-center">
            <p class="text-sm text-gray-500 uppercase tracking-wider mb-1"><%= product.category %></p>
            <h3 class="text-lg font-bold uppercase tracking-wide mb-2"><%= product.name %></h3>
            <p class="text-xl font-semibold"><%= product.price %> dh</p>
          </div>
        </div>
        <% }); %>
      </div>
    <% } else { %>
      <!-- Default Products when no database products -->
