            <!-- Marketing Materials -->
            <article class="affiliate-card">
                <div class="affiliate-card-header">
                    <div class="affiliate-icon">
                        <i class="fas fa-images"></i>
                    </div>
                </div>
                <div class="affiliate-card-content">
                    <h3 class="affiliate-title">Marketing Materials</h3>
                    <p class="affiliate-description">
                        Access professional marketing materials designed to convert. From high-quality product images to proven ad copy, we provide everything you need to succeed.
                    </p>
                    <ul class="affiliate-features">
                        <li>High-resolution product photography</li>
                        <li>Proven ad copy and headlines</li>
                        <li>Social media templates</li>
                        <li>Email marketing templates</li>
                        <li>Video content and tutorials</li>
                    </ul>
                </div>
            </article>

            <!-- Dedicated Support -->
            <article class="affiliate-card">
                <div class="affiliate-card-header">
                    <div class="affiliate-icon">
                        <i class="fas fa-user-friends"></i>
                    </div>
                </div>
                <div class="affiliate-card-content">
                    <h3 class="affiliate-title">Dedicated Support</h3>
                    <p class="affiliate-description">
                        Get the support you need to maximize your earnings. Our affiliate success team is here to help you optimize your campaigns and grow your income.
                    </p>
                    <ul class="affiliate-features">
                        <li>Dedicated affiliate success manager</li>
                        <li>One-on-one strategy sessions</li>
                        <li>Priority email and chat support</li>
                        <li>Weekly group training calls</li>
                        <li>Exclusive affiliate community access</li>
                    </ul>
                </div>
            </article>

            <!-- Fast Payments -->
            <article class="affiliate-card">
                <div class="affiliate-card-header">
                    <div class="affiliate-icon">
                        <i class="fas fa-credit-card"></i>
                    </div>
                </div>
                <div class="affiliate-card-content">
                    <h3 class="affiliate-title">Fast Payments</h3>
                    <p class="affiliate-description">
                        Get paid quickly and reliably. We process affiliate payments twice monthly with multiple payment options to suit your preferences.
                    </p>
                    <ul class="affiliate-features">
                        <li>Bi-monthly payment schedule</li>
                        <li>Multiple payment methods available</li>
                        <li>Low minimum payout threshold</li>
                        <li>Automatic payment processing</li>
                        <li>Detailed payment statements</li>
                    </ul>
                </div>
            </article>

            <!-- Exclusive Access -->
            <article class="affiliate-card">
                <div class="affiliate-card-header">
                    <div class="affiliate-icon">
                        <i class="fas fa-crown"></i>
                    </div>
                </div>
                <div class="affiliate-card-content">
                    <h3 class="affiliate-title">Exclusive Access</h3>
                    <p class="affiliate-description">
                        Get early access to new products, exclusive discount codes, and special promotions. Stay ahead of the competition with insider access.
                    </p>
                    <ul class="affiliate-features">
                        <li>Early access to new collections</li>
                        <li>Exclusive affiliate discount codes</li>
                        <li>Special promotional campaigns</li>
                        <li>Product samples for content creation</li>
                        <li>VIP event invitations</li>
                    </ul>
                </div>
            </article>
        </div>

        <!-- Commission Tiers -->
        <div class="commission-tiers">
            <div class="section-intro">
                <h2 class="section-title">Commission Tiers</h2>
                <p class="section-description">
                    Our tiered commission structure rewards performance. The more you sell, the more you earn per sale.
                </p>
            </div>

            <div class="tiers-grid">
                <div class="tier-card">
                    <div class="tier-name">Starter</div>
                    <div class="tier-commission">5%</div>
                    <div class="tier-requirement">$0 - $2,499 monthly sales</div>
                    <ul class="tier-benefits">
                        <li>5% commission on all sales</li>
                        <li>Basic marketing materials</li>
                        <li>Email support</li>
                        <li>Monthly payment</li>
                    </ul>
                </div>

                <div class="tier-card">
                    <div class="tier-name">Pro</div>
                    <div class="tier-commission">6%</div>
                    <div class="tier-requirement">$2,500 - $4,999 monthly sales</div>
                    <ul class="tier-benefits">
                        <li>6% commission on all sales</li>
                        <li>Premium marketing materials</li>
                        <li>Priority support</li>
                        <li>Bi-monthly payments</li>
                        <li>Performance bonuses</li>
                    </ul>
                </div>

                <div class="tier-card">
                    <div class="tier-name">Elite</div>
                    <div class="tier-commission">8%</div>
                    <div class="tier-requirement">$5,000+ monthly sales</div>
                    <ul class="tier-benefits">
                        <li>8% commission on all sales</li>
                        <li>Exclusive marketing materials</li>
                        <li>Dedicated account manager</li>
                        <li>Weekly payments available</li>
                        <li>Quarterly bonuses</li>
                        <li>Product samples</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Signup Form -->
        <div class="signup-form">
            <div class="simple-header">
                <h2>Join Our Affiliate Program</h2>
                <p>Ready to start earning with <strong>SABILS</strong>? Complete the application below and start promoting premium gym apparel today.</p>
            </div>

            <form class="simple-form">
                <div class="form-row">
                    <div class="form-field">
                        <label for="full-name">Full Name *</label>
                        <input type="text" id="full-name" required>
                    </div>
                    <div class="form-field">
                        <label for="email">Email Address *</label>
                        <input type="email" id="email" required>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-field">
                        <label for="website">Website/Social Media *</label>
                        <input type="url" id="website" placeholder="https://your-website.com" required>
                    </div>
                    <div class="form-field">
                        <label for="audience-size">Audience Size *</label>
                        <select id="audience-size" required>
                            <option value="">Select Audience Size</option>
                            <option value="1k-5k">1K - 5K followers</option>
                            <option value="5k-10k">5K - 10K followers</option>
                            <option value="10k-50k">10K - 50K followers</option>
                            <option value="50k-100k">50K - 100K followers</option>
                            <option value="100k+">100K+ followers</option>
                        </select>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-field full-width">
                        <label for="niche">Primary Niche *</label>
                        <select id="niche" required>
                            <option value="">Select Your Niche</option>
                            <option value="fitness">Fitness/Bodybuilding</option>
                            <option value="crossfit">CrossFit</option>
                            <option value="yoga">Yoga/Wellness</option>
                            <option value="running">Running/Cardio</option>
                            <option value="lifestyle">Lifestyle/Fashion</option>
                            <option value="other">Other</option>
                        </select>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-field full-width">
                        <label for="experience">Tell us about your experience (optional)</label>
                        <textarea id="experience" placeholder="Describe your experience with affiliate marketing, brands you've worked with, and why you want to promote SABILS gym apparel..."></textarea>
                    </div>
                </div>

                <button type="submit" class="submit-btn">Apply Now</button>
            </form>
        </div>
    </section>
