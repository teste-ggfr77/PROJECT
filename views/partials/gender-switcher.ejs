<!-- Gender Switcher -->
<div class="gender-switcher">
  <select id="gender-select" class="gender-select" aria-label="Select Gender Category">
    <option value="men" <%= gender === 'men' ? 'selected' : '' %>>Men's</option>
    <option value="women" <%= gender === 'women' ? 'selected' : '' %>>Women's</option>
  </select>
</div>

<style>
.gender-switcher {
  position: absolute;
  top: 20px;
  right: 20px;
  z-index: 10;
}

.gender-select {
  padding: 8px 16px;
  border-radius: 25px;
  border: 2px solid rgba(255, 255, 255, 0.2);
  background: rgba(0, 0, 0, 0.5);
  color: white;
  font-size: 14px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  backdrop-filter: blur(10px);
}

.gender-select:hover {
  background: rgba(0, 0, 0, 0.7);
  border-color: rgba(255, 255, 255, 0.4);
  transform: translateY(-1px);
}

.gender-select:focus {
  outline: none;
  border-color: rgba(255, 255, 255, 0.6);
  box-shadow: 0 0 0 3px rgba(255, 255, 255, 0.1);
}

.gender-select option {
  background: #000;
  color: white;
  padding: 10px;
}

@media (max-width: 768px) {
  .gender-switcher {
    top: 10px;
    right: 10px;
  }
  
  .gender-select {
    padding: 6px 12px;
    font-size: 12px;
  }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const genderSelect = document.getElementById('gender-select');
    if (genderSelect) {
        genderSelect.addEventListener('change', function() {
            const selectedGender = this.value;
            const currentPath = window.location.pathname;
            const newPath = currentPath.replace(/^\/(men|women)/, `/${selectedGender}`);
            window.location.href = newPath;
        });
    }
});
</script>
