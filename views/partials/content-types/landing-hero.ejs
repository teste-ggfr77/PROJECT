<%
const bgClass = content.backgroundColor === '#000000' ? 'nobull-bg-black' : 'nobull-bg-white';
%>
<section class="nobull-section <%= bgClass %> nobull-text"
    data-bg-color="<%= content.backgroundColor || 'transparent' %>"
    data-text-color="<%= content.textColor || 'inherit' %>"
    style="--section-bg-color: <%= content.backgroundColor || 'transparent' %>; --section-text-color: <%= content.textColor || 'inherit' %>">
    <% if (content.image) { %>
    <img src="<%= content.image %>" alt="<%= content.title %>" class="nobull-bg-image">
    <% } %>
    <div class="nobull-content nobull-fade-in">
        <h1 class="nobull-heading"><%= content.title %></h1>
        <% if (content.subtitle) { %>
        <div class="nobull-subheading mt-4"><%= content.subtitle %></div>
        <% } %>
        <% if (content.buttonText && content.buttonLink) { %>
        <div class="mt-5">
            <a href="<%= content.buttonLink %>" class="nobull-button"><%= content.buttonText %></a>
        </div>
        <% } %>
    </div>
</section>